                                Width="Auto"
                                Height="Auto"
                                Margin="2,0,2,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderThickness="0,0,0,1"
                                CornerRadius="10,0,0,0"
                                Opacity="0.5">
                            <Border.LayoutTransform>
                                <TransformGroup>
